<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Code Editor Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’» C Code Editor"
                android:textSize="18sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/code_background"
                android:padding="12dp">

                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:textColor="@color/code_text"
                    android:textColorHint="@color/text_hint"
                    android:fontFamily="monospace"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:hint="Write your C code here..."
                    android:background="@android:color/transparent"
                    android:minLines="15" />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Shortcuts Bar -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTab"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="TAB"
                android:textSize="12sp"
                android:minWidth="65dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnBraceOpen"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="{"
                android:textSize="16sp"
                android:minWidth="55dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnBraceClose"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="}"
                android:textSize="16sp"
                android:minWidth="55dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnParenOpen"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="("
                android:textSize="16sp"
                android:minWidth="55dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnParenClose"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=")"
                android:textSize="16sp"
                android:minWidth="55dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnSemicolon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=";"
                android:textSize="16sp"
                android:minWidth="55dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnQuote"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="&quot;"
                android:textSize="16sp"
                android:minWidth="55dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Run Button -->
    <Button
        android:id="@+id/btnRun"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="â–¶ RUN CODE"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Button.Primary"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp" />

    <!-- Output Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ–¥ï¸ Output"
                android:textSize="18sp"
                android:textColor="@color/success"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/code_background"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/success"
                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:text="Output will appear here..." />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
