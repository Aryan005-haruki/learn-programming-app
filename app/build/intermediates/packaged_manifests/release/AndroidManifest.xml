<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clearning.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="com.clearning.app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.clearning.app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CLearning" >

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name="com.clearning.app.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CLearning.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.clearning.app.activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning.NoActionBar" />

        <!-- Signup Activity -->
        <activity
            android:name="com.clearning.app.activities.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning.NoActionBar" />

        <!-- Main Activity (Home) -->
        <activity
            android:name="com.clearning.app.activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning" />

        <!-- C Programming Activity (Tabbed) -->
        <activity
            android:name="com.clearning.app.activities.CProgrammingActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Java Programming Activity (Tabbed) -->
        <activity
            android:name="com.clearning.app.activities.JavaProgrammingActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Chapter Activity -->
        <activity
            android:name="com.clearning.app.activities.ChapterActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Lesson Activity -->
        <activity
            android:name="com.clearning.app.activities.LessonActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.ChapterActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Code View Activity -->
        <activity
            android:name="com.clearning.app.activities.CodeViewActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.LessonActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Quiz Activity -->
        <activity
            android:name="com.clearning.app.activities.QuizActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.ChapterActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Result Activity -->
        <activity
            android:name="com.clearning.app.activities.ResultActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.QuizActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Profile Activity -->
        <activity
            android:name="com.clearning.app.activities.ProfileActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Edit Profile Activity -->
        <activity
            android:name="com.clearning.app.activities.EditProfileActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.ProfileActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- About Activity -->
        <activity
            android:name="com.clearning.app.activities.AboutActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Program Detail Activity -->
        <activity
            android:name="com.clearning.app.activities.ProgramDetailActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.CProgrammingActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Category Programs Activity -->
        <activity
            android:name="com.clearning.app.activities.CategoryProgramsActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.CProgrammingActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Practice Set Activity -->
        <activity
            android:name="com.clearning.app.activities.PracticeSetActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.CProgrammingActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Upcoming Features Activity -->
        <activity
            android:name="com.clearning.app.activities.UpcomingFeaturesActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <!-- Settings Activity -->
        <activity
            android:name="com.clearning.app.activities.SettingsActivity"
            android:exported="false"
            android:parentActivityName="com.clearning.app.activities.MainActivity"
            android:theme="@style/Theme.CLearning" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.clearning.app.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>