<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CLearning"
        tools:targetApi="31">
        
        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CLearning.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning.NoActionBar" />
        
        <!-- Signup Activity -->
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning.NoActionBar" />
        
        <!-- Main Activity (Home) -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning" />
        
        <!-- C Programming Activity (Tabbed) -->
        <activity
            android:name=".activities.CProgrammingActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Java Programming Activity (Tabbed) -->
        <activity
            android:name=".activities.JavaProgrammingActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Chapter Activity -->
        <activity
            android:name=".activities.ChapterActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Lesson Activity -->
        <activity
            android:name=".activities.LessonActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.ChapterActivity" />
        
        <!-- Code View Activity -->
        <activity
            android:name=".activities.CodeViewActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.LessonActivity" />
        
        <!-- Quiz Activity -->
        <activity
            android:name=".activities.QuizActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.ChapterActivity" />
        
        <!-- Result Activity -->
        <activity
            android:name=".activities.ResultActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.QuizActivity" />
        
        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Edit Profile Activity -->
        <activity
            android:name=".activities.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.ProfileActivity" />
        
        <!-- About Activity -->
        <activity
            android:name=".activities.AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Program Detail Activity -->
        <activity
            android:name=".activities.ProgramDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.CProgrammingActivity" />
        
        <!-- Category Programs Activity -->
        <activity
            android:name=".activities.CategoryProgramsActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.CProgrammingActivity" />
        
        <!-- Practice Set Activity -->
        <activity
            android:name=".activities.PracticeSetActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.CProgrammingActivity" />
        
        <!-- Upcoming Features Activity -->
        <activity
            android:name=".activities.UpcomingFeaturesActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Settings Activity -->
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.CLearning"
            android:parentActivityName=".activities.MainActivity" />
        
    </application>

</manifest>
